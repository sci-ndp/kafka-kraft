# Host/network
HOST_IP=CHANGEME_YOUR_IP

# Kafka cluster identity (base64-encoded UUID, 22 chars, no padding)
CLUSTER_ID=kp7Rzc7oT4GtsqDuqo21Wg

# SASL/PLAIN users (internal, EXTERNAL listener)
KAFKA_ADMIN_USER=admin
KAFKA_ADMIN_PASSWORD=admin-secret
KAFKA_CLIENT_USER=client
KAFKA_CLIENT_PASSWORD=client-secret

# SCRAM users (for SASL_SSL listener)
SCRAM_ADMIN_USER=scram-admin
SCRAM_ADMIN_PASSWORD=scram-admin-secret
SCRAM_CLIENT_USER=scram-client
SCRAM_CLIENT_PASSWORD=scram-client-secret

# TLS keystore/truststore password (dev/self-signed)
SSL_STORE_PASSWORD=changeit
